{{!-- Mostramos los productos con una cad de bootstrap --}}

<div style="background-color: #2A363B; color: #FFFFFF; padding: 20px;">
  <h1>Productos</h1>
  <div class="row">
    {{#each products}}
      <div class="col-4">
        <div class="card p-3 m-2" style="background-color: #FF5733; color: #FFFFFF;">
          <h5>{{title}}</h5>
          <img src="{{image}}" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{description}}</p>
            <a href="" class="btn btn-primary" style="background-color: #F7B32B;">Ver m√°s</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
