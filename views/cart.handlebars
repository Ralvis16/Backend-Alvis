<h3 style="color: #FF5733;">Carrito</h3>

{{!-- Hacemos una tabla con los productos agregados al carrito --}}
<table class="table table-striped" style="color: #FFFFFF;">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{product.title}}</td>
            <td>{{product.price}}</td>
            <td>{{quantity}}</td>
        </tr>
        {{/each}}
    </tbody>

    <tfoot>
        <tr>
            <td>Total</td>
            <td>{{total}}</td>
        </tr>
        <tr>
            <td colspan="4">
                <form action="/cart/buy/{{cartId}}" method="post">
                    <input type="submit" value="Finalizar Compra" style="background-color: #FF5733; color: #FFFFFF; padding: 5px 10px; border: none; border-radius: 5px; cursor: pointer;">
                </form>
            </td>
        </tr>
    </tfoot>
</table>
